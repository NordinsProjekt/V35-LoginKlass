@using Interfaces
@inherits LayoutComponentBase
@inject ILogin _login
<PageTitle>Blazor UI</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            @if(_login.IsLoggedIn())
            {
                <a href="" @onclick="@Linkit" @onclick:preventDefault>Logout</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code {
    void Linkit()
    {
        _login.Logout();
    }
}
